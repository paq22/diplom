%h1= t("headers.#{params['controller']}.#{params['action']}")
.card.border-light.mb-3
  .card-header
    = link_to t('button.new.permition'), new_permition_path, class:"btn btn-success"
.table-responsive
  %table.table.table-hover.table-striped.my_table{style: "width:100%;"}
    %thead.thead-dark
      %tr
        %th â„–
        %th= t('activerecord.attributes.permition.act')
        %th= t('activerecord.attributes.permition.information_system')
        %th= t('activerecord.attributes.permition.parameter')
        %th
    %tbody
      - @permitions.each_with_index do |permition, i|
        %tr
          %td
            =succeed '.' do
              =i + 1 + 10 * (@page.to_i - 1)
          %td.user_row{"data" => {"content" => ["#{params['controller']}", "#{permition.id}"]}}= permition.act
          %td.user_row{"data" => {"content" => ["#{params['controller']}", "#{permition.id}"]}}= permition.information_system.name
          %td.user_row{"data" => {"content" => ["#{params['controller']}", "#{permition.id}"]}}= permition.parameter
          %td= link_to t('button.destroy'), permition, method: :delete, data: { confirm: t('helpers.sure') }, class:"btn btn-danger"
= paginate @permitions, id: "paginate"
