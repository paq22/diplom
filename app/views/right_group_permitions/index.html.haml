%h1= t("headers.#{params['controller']}.#{params['action']}")
.card.border-light.mb-3
  .card-header
    = link_to 'New Right group permition', new_right_group_permition_path, class:"btn btn-success"
%table.table.table-hover.table-striped
  %thead.thead-dark
    %tr
      %th Permition
      %th Group right
      %th Parameter
      %th

  %tbody
    - @right_group_permitions.each do |right_group_permition|
      %tr
        %td.user_row{"data" => {"content" => ["#{params['controller']}", "#{right_group_permition.id}"]}}= right_group_permition.permition.act
        %td.user_row{"data" => {"content" => ["#{params['controller']}", "#{right_group_permition.id}"]}}= right_group_permition.group_right.group_name
        %td.user_row{"data" => {"content" => ["#{params['controller']}", "#{right_group_permition.id}"]}}= right_group_permition.parameter
        %td= link_to t('button.destroy'), right_group_permition, method: :delete, data: { confirm: t('helpers.sure') }, class:"btn btn-danger"
