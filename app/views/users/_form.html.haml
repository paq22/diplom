= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :ln
    = f.text_field :ln
  .field
    = f.label :fn
    = f.text_field :fn
  .field
    = f.label :sn
    = f.text_field :sn
  .field
    = f.label :bday
    = f.date_select :bday
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :login
    = f.text_field :login
  .field
    = f.label :sex
    = f.text_field :sex
  .actions
    = f.submit t('button.save')
