= form_for @dictionary_access do |f|
  - if @dictionary_access.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dictionary_access.errors.count, "error")} prohibited this dictionary_access from being saved:"
      %ul
        - @dictionary_access.errors.full_messages.each do |message|
          %li= message

  .lin_gor
  %p
    .row
      .col-md-2
      .lin_ver
      .col-md-6  
        = f.label :information_system
        = f.select :information_system_id, options_for_select(InformationSystem.all.map{|t| ["#{t.name} " , t.id]}, f.object.information_system_id),{include_blank: true},{class:"form-control selectpicker", data: {value: f.object.information_system_id}}
        = f.label :name
        = f.text_field :name, class:"form-control "
        = f.label :access_key
        = f.text_field :access_key, class:"form-control "
    %br
      .row
        .col-md-12
          .col-md-2.col-md-offset-2
            = link_to t('button.back'), dictionary_accesses_path, class: "btn btn-danger"
          .col-md-2
            = f.submit t('button.save'), class: "btn btn-primary"
