<body class ="black">
  <div class="row">
<div class="col-md-6 text-center">
    <img height='250' src='/images/logo4.png' width='800'>
     </div>    
     </div>
<div class="row">
    <div class="col-md-6 col-md-offset-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :Электронная_почта %><br />
          <%= f.email_field :email, autofocus: true , class:"form-control"%>
        </div>

        <div class="field">
          <%= f.label :Пароль %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
        </div>
      
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :Запомнить_меня, class: "text-center" %>
          </div>
        <% end -%>
      
        <div class="actions">
          <%= f.submit t('button.Log_in'), class: "btn btn-success btn-lg", style: "float: right"%>
        </div>
      <% end %>
      
    <%= render "devise/shared/links" %>
</div>
</body>


