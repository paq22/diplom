= form_for @role_group_right do |f|
  - if @role_group_right.errors.any?
    #error_explanation
      %h2= "#{pluralize(@role_group_right.errors.count, "error")} prohibited this role_group_right from being saved:"
      %ul
        - @role_group_right.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :role
    = f.select :role_id,
    options_for_select(Role.all.map{|t| ["#{t.name} ", t.id]}, f.object.role_id),
    {include_blank: true}
  .field
    = f.label :group_right
    = f.select :group_right_id,
    options_for_select(GroupRight.all.map{|t| ["#{t.group_name} ", t.id]}, f.object.group_right_id),
    {include_blank: true}
  .field
    = f.label :parameter
    = f.text_field :parameter
  .actions
    = f.submit 'Save'
